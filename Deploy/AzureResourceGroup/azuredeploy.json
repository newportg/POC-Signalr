    //  "apiVersion": "2016-10-01",
    //  "dependsOn": [
    //    "[resourceId('Microsoft.KeyVault/vaults', variables('var_kv_name'))]",
    //    "[resourceId('Microsoft.SignalRService/SignalR', variables('var_sr_name'))]"
